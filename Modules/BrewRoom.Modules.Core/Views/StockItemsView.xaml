<UserControl x:Class="BrewRoom.Modules.Core.Views.StockItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Behaviours="clr-namespace:BrewRoom.Modules.Core.Behaviours"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="620"
             d:DesignWidth="700"
             Width="700"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConvertor" />
        <Style x:Key="GroupBoxStyle" TargetType="{x:Type GroupBox}">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Background" Value="Beige" />
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <TabControl Width="300"
                    Height="600"
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Left"
                    Padding="2">
            <TabItem x:Name="Fermentables" Header="IFermentables" PreviewMouseDown="Fermentables_PreviewMouseDown">
                <DataGrid Width="270"
                          Height="Auto"
                          Margin="10,10,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          AutoGenerateColumns="False"
                          Behaviours:MouseDoubleClickBehaviour.DoubleClickCommand="{Binding SelectStockItemCommand}"
                          DockPanel.Dock="Left"
                          GridLinesVisibility="None"
                          IsSynchronizedWithCurrentItem="True"
                          ItemsSource="{Binding Fermentables}"
                          Padding="3"
                          SelectedItem="{Binding SelectedStockItem}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}"
                                            Header="Name"
                                            IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding Pppg}"
                                            Header="Potential"
                                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem x:Name="Hops" Header="Hops" PreviewMouseDown="Hops_PreviewMouseDown">
                <DataGrid Width="270"
                          Height="Auto"
                          Margin="10,10,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          AutoGenerateColumns="False"
                          Behaviours:MouseDoubleClickBehaviour.DoubleClickCommand="{Binding SelectStockItemCommand}"
                          DockPanel.Dock="Left"
                          GridLinesVisibility="None"
                          ItemsSource="{Binding Hops}"
                          IsSynchronizedWithCurrentItem="True"
                          Padding="3"
                          SelectedItem="{Binding SelectedStockItem}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}"
                                            Header="Name"
                                            IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding AlphaAcid}"
                                            Header="Alpha Acid"
                                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem x:Name="Yeast" Header="Yeast">
                <ListBox ItemsSource="{Binding Yeasts}" />
            </TabItem>
        </TabControl>
        <GroupBox Height="300"
                  Header="Fermentable Details"
                  Style="{StaticResource GroupBoxStyle}"
                  Visibility="{Binding IsFermentableDetailsVisible,
                                       Converter={StaticResource booleanToVisibilityConvertor}}">
            <Grid Height="Auto" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="3.5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           Text="Name" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Width="260"
                         Margin="3.5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Text="{Binding SelectedStockItem.Name}" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="3.5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           Text="Potential" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Width="50"
                         Margin="3.5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Text="{Binding SelectedStockItem.Pppg}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="3.5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           Text="Description" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Width="260"
                         Height="90"
                         Margin="3.5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Text="{Binding SelectedStockItem.Description}"
                         VerticalScrollBarVisibility="Auto" />

            </Grid>
        </GroupBox>

        <GroupBox Height="300"
                  Header="Hop Details"
                  Style="{StaticResource GroupBoxStyle}"
                  Visibility="{Binding IsHopDetailsVisible,
                                       Converter={StaticResource booleanToVisibilityConvertor}}">
            <Grid Height="Auto" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="3.5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           Text="Name" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Width="260"
                         Margin="3.5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Text="{Binding SelectedStockItem.Name}" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="3.5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Center"
                           Text="Alpha Acid" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Width="50"
                         Margin="3.5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Text="{Binding SelectedStockItem.AlphaAcid}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="3.5"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           Text="Description" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Width="260"
                         Height="90"
                         Margin="3.5"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Text="{Binding SelectedStockItem.Description}"
                         VerticalScrollBarVisibility="Auto" />

            </Grid>
        </GroupBox>

    </DockPanel>

</UserControl>
